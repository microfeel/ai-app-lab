<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/floating_input_color_blue"
                android:endColor="@color/floating_input_color_purple"
                android:type="linear" />
            <corners android:radius="40dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/floating_white" />
            <corners android:radius="40dp" />
        </shape>
    </item>
</layer-list>