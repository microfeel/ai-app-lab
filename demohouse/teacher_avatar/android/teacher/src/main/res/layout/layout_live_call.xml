<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/live_call_container"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/camera_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_rainbow"
            android:layout_gravity="bottom"
            android:src="@drawable/live_status_view"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bytedance.ai.multimodal.teacher.view.BreathingAnimationView
            android:id="@+id/breathing_animation_view"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="-50dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/tv_chat"
            android:layout_marginBottom="35dp"
            android:layout_marginHorizontal="32dp"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="@dimen/sp_16"
            android:scrollbars="vertical"
            android:maxLines="3"
            tools:text="今天你想做什么？xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxasdas"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</merge>